---
---
{
  {% for category in site.categories %}
  {
    "title": "{{ category.title }}",
    "url": "{{ category.url | absolute_url }}",
    "category": "{{ category.title }}",
    "content": {{ category.content | strip_html | strip_newlines | jsonify }},
    "excerpt": {{ category.excerpt | strip_html | strip_newlines | jsonify }},
    "tags": [
      {% if category.icon %}"{{ category.title | downcase }}"{% endif %}
      {% if page.tags %}
        {% for tag in category.tags %}
        ,"{{ tag }}"
        {% endfor %}
      {% endif %}
    ]
  }{% unless forloop.last %},{% endunless %}
  {% endfor %}
}
